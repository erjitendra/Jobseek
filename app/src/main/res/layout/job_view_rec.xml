<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        >

    <TextView
        android:id="@+id/tv_jobview_rec_skills"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="Job Type: Android"
        android:textAllCaps="true"
        android:hint="skills"/>
    <TextView
        android:id="@+id/tv_jobview_rec_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Description: hhhhhhhh"
        android:textSize="18sp"
        />

        <TextView
            android:id="@+id/tv_jobview_rec_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:text="Email: jkguptaer@gmail.com"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_jobview_rec_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:text="Name: Jitendra Gupta"
            android:layout_weight="1"/>


    <TextView
        android:id="@+id/tv_jobview_rec_applied"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="No. of Candidate Applied: 2 "
        android:hint="No.Of Applied"/></LinearLayout></android.support.v7.widget.CardView>
</LinearLayout>